pipeline {
    agent any

    stages {
        stage('Preparation') {
            steps {
                script {
                    echo 'Installing dependencies...'
                }
                // Installe Newman globalement
                bat 'npm install -g newman'
            }
        }
        
        stage('Run Postman Collection') {
            steps {
                script {
                    echo 'Running Postman collection using Newman...'
                }
              
                bat 'newman run tp.json'
            }
        }
    }
}
