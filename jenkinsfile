pipeline {
    agent {
        docker {
            image 'postman/newman:alpine'
            args "--entrypoint=''"  
        }
    }
    stages {
        stage('Vérifier Newman') {
            steps {
                echo ' de la version de Newman...'
                sh 'newman -v'  
            }
        }
        
        stage('Exécuter la collection Postman') {
            steps {
                echo 'Exécution de la collection Postman...'
              
                sh 'newman run tp.json'  
            }
        }
    }
}
