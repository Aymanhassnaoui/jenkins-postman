pipeline {
    agent {
        docker {
            image 'postman/newman:alpine'
            args '-v C:/ProgramData/Jenkins/.jenkins/workspace/jenkins_tp_postman/:/etc/newman'  
        }
    }

    stages {
        stage('Run Tests avec Newman') {
            steps {
                script {
            
                    sh 'docker pull postman/newman:alpine'

                    
                    sh 'docker run --rm -v "$PWD:/etc/newman" postman/newman run /etc/newman/tp.json'
                }
            }
        }
    }
}
