pipeline {
    agent {
        docker {
            image 'postman/newman:alpine'  
            args "--entrypoint=''"
           
        }
    }
    stages {
        stage('Vérifier Newman') {
            steps {
                echo 'Vérification de la version de Newman...'
                sh 'newman -v'  
            }
        }
     
    }

     stage('Exécuter la collection Postman') {
            steps {
                sh 'newman run tp.json' 
            }
        }
   
}
